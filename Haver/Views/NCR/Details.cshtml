                                <label asp-for="QualityRepresentative.SalesOrd" class="control-label"></label>
                                <input asp-for="QualityRepresentative.SalesOrd" class="form-control" readonly />
                                <span asp-validation-for="QualityRepresentative.SalesOrd" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="QualityRepresentative.QualityRepresentativeSign" class="control-label"></label>
                                <input asp-for="QualityRepresentative.QualityRepresentativeSign" class="form-control" readonly />
