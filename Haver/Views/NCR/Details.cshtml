                                <input asp-for="NCRNum" class="form-control" readonly />
                                <span asp-validation-for="NCRNum" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="QualityRepresentative.PoNo" class="control-label"></label>
                                <input asp-for="QualityRepresentative.PoNo" class="form-control" oninput="this.value = Math.abs(this.value)" readonly />
                                <span asp-validation-for="QualityRepresentative.PoNo" class="text-danger"></span>
                            </div>
