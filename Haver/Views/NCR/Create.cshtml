                                    <label asp-for="QualityRepresentative.QuantDefective" class="control-label"></label><span> (required)</span>
                                    <input asp-for="QualityRepresentative.QuantDefective" class="form-control" oninput="this.value = Math.abs(this.value)" data-val="disabled" />
