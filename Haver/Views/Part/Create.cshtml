@model Haver.Models.Part

@{
    ViewData["Title"] = "Create Part";
}

<div>
    <h1>Create Part</h1>
    <hr />
    <div class="text-danger">@Html.Raw(TempData["Feedback"])</div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PartDesc" class="control-label"></label>
                <input asp-for="PartDesc" class="form-control" />
                <span asp-validation-for="PartDesc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PartNumber" class="control-label"></label>
                <input asp-for="PartNumber" class="form-control" />
                <span asp-validation-for="PartNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SupplierID" class="control-label"></label><span> (required)</span>
                <select asp-for="SupplierID" class="form-select" asp-items="ViewBag.SupplierID">
                    <option value="">Select a Supplier</option>
                </select>
                <span asp-validation-for="SupplierID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <partial name="_BackToList" />
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
