<div class="card-body">
    <form asp-action="InsertFromExcel" asp-controller="Supplier" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label custom-file-label">Upload Excel File:</label>
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" name="theExcel" id="theExcel">
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Upload Data" class="btn btn-secondary" />
                </div>
            </div>
            <div class="col-md-7">
                <p>
                    Your excel file must have two columns, one named Supplier Name, and another named Supplier Code.<br />
                    <a href="~/assets/excelFiles/Suppliers.xlsx" download>
                        Download template excel file
                    </a>
                </p>
            </div>
        </div>
    </form>
    <div class="card-body lookup-values-displayer">
        @Html.DropDownList("SupplierID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
    </div>
</div>
<div class="lookup-footer">
    <a asp-controller="Supplier" asp-action="Create" class="btn btn-primary">Create</a>
    <a asp-controller="Supplier" asp-action="Edit" class="btn btn-primary linkClick">Edit</a>
    <a asp-controller="Supplier" asp-action="Delete" class="btn btn-primary linkClick">Delete</a>
</div>
