@model Haver.Models.Supplier
<form asp-controller="Supplier" asp-action="Create" id="createSupplierForm">
    <div class="text-danger validation-summary-errors"><ul id="ErrorList"></ul></div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="SupplierName" class="control-label"></label>
                <input asp-for="SupplierName" class="form-control" />
                <span asp-validation-for="SupplierName" class="text-danger"></span>
                </br>
                <label asp-for="SupplierCode" class="control-label"></label>
                <input asp-for="SupplierCode" class="form-control" />
                <span asp-validation-for="SupplierCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="submitSupplierCreate" class="btn btn-outline-secondary" />
            </div>
        </div>
    </div>
</form>
