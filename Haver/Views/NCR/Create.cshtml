                                    <label asp-for="QualityRepresentative.QuantReceived" class="control-label"></label><span> (required)</span>
                                    <input asp-for="QualityRepresentative.QuantReceived" class="form-control" oninput="this.value = Math.abs(this.value)" data-val="disabled" />
                                    <span asp-validation-for="QualityRepresentative.QuantReceived" class="text-danger"></span>
                                </div>
