                        <div class="form-group">
                            <label asp-for="QualityRepresentative.DescDefect" class="control-label"></label>
                            <textarea asp-for="QualityRepresentative.DescDefect" rows="5" class="form-control" readonly></textarea>
                            <span asp-validation-for="QualityRepresentative.DescDefect" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                @if (Model.QualityRepresentative != null && (Model.QualityRepresentative.QualityPhotos.Any() || Model.QualityRepresentative.VideoLinks.Any()))
                {
                    <div class="section-form multimedia">
                        <div class="section-label">
                            <h4>Multimedia</h4>
                            <hr />
                        </div>
                        @if (Model.QualityRepresentative.QualityPhotos?.Any() ?? false)
                        {
                            <p class="control-label">Images</p>
                            <div class="form-group details-images">
                                @foreach (var image in Model.QualityRepresentative.QualityPhotos)
                                {
                                    string imageBase64 = Convert.ToBase64String(image.Content);
                                    string imageSrc = string.Format("data:" + image.MimeType + ";base64,{0}", imageBase64);
                                    <div class="card editor" style="width: 14rem;">
                                        <img src="@imageSrc" alt="Customer Image" title="Customer Image" class="img-fluid rounded" />

                                    </div>
                                }
                            </div>
                        }
                        @if (Model.QualityRepresentative.VideoLinks != null && Model.QualityRepresentative.VideoLinks.Any())
                        {
                            <div class="form-group details-links">
                                <p class="control-label">Video links</p>
                                <ul>
