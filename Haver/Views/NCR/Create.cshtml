                                    </div>
                                </div>

                                <div class="form-group" id="linksListContainerQuality"></div>
                            </div>

                            @if (Model.QualityRepresentative != null && (Model.QualityRepresentative.VideoLinks?.Any() ?? false) && Model.IsNCRDraft == true)
                            {
                            <div class="section-form multimedia">
                                    <div class="form-group details-links editor">
                                        <ul>
                                            @foreach (var link in Model.QualityRepresentative.VideoLinks)
                                            {
                                                <li>
                                                    <a href="@link.Link" target="_blank">@link.Link</a>
                                                    <div>
                                                        <p>Check to remove</p>
                                                        <input class="form-check-input" type="checkbox" id="linksToRemove" name="linksToRemove" value="@link.ID">
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                            </div>
                            }
                        </div>

                        <div class="section-form">
                            <div class="section-label">
                                <h4>Report notification</h4>
                                <hr />
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="form-observations">
                                            <i class="bi bi-info-circle-fill"></i>
                                            <p>The notification fields are auto filled by default. You can edit them as needed. If no changes are made, the default message and recipients will be used.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row email-boxes">
                                        <div class="form-group col-md-6">
                                            <label class="control-label"> Available Staff</label> <button type="button" id="btnRight" class="btn btn-sm">
